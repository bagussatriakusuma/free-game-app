<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="heading1">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/plusjakartasans_bold</item>
        <item name="android:textSize">@dimen/heading1</item>
    </style>

    <style name="subtitle1">
        <item name="android:textColor">@color/subtitle_color</item>
        <item name="android:fontFamily">@font/plusjakartasans_regular</item>
        <item name="android:textSize">@dimen/subtitle1</item>
        <item name="android:letterSpacing">0.015</item>
    </style>

    <style name="subtitle2">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/plusjakartasans_medium</item>
        <item name="android:textSize">@dimen/subtitle1</item>
    </style>

    <style name="subtitle3">
        <item name="android:textColor">@color/heading_color</item>
        <item name="android:fontFamily">@font/plusjakartasans_semibold</item>
        <item name="android:textSize">@dimen/subtitle3</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="subtitle4">
        <item name="android:textColor">@color/danger</item>
        <item name="android:fontFamily">@font/plusjakartasans_semibold</item>
        <item name="android:textSize">@dimen/subtitle1</item>
    </style>

<!--    <style name="textInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">-->
    <style name="textInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxStrokeColor">@color/edit_text_color</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxBackgroundColor">@color/edit_text_color</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_edit_text</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_edit_text</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_edit_text</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_edit_text</item>
        <item name="errorEnabled">true</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="textInputEditText">
        <item name="fontFamily">@font/plusjakartasans_medium</item>
        <item name="android:hint">@string/hint_email</item>
        <item name="hintTextColor">@color/hint_text_color</item>
        <item name="android:textSize">@dimen/subtitle1</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="button" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_button</item>
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/plusjakartasans_bold</item>
        <item name="cornerRadius">@dimen/corner_edit_text</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="button.logout" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/subtitle1</item>
        <item name="android:backgroundTint">@color/danger</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/plusjakartasans_bold</item>
        <item name="cornerRadius">@dimen/corner_edit_text</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="BottomNavigationView">
        <item name="fontFamily">@font/plusjakartasans_medium</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>